{
  "name": "chrome-extension-boilerplate",
  "version": "1.0.0",
  "description": "Chrome extension boilerplate with Next.js, TypeScript, Tailwind CSS, and Vite",
  "type": "module",
  "scripts": {
    "prebuild": "node -e \"require('fs').copyFileSync('src/shared/global.css', 'public/shared/global.css')\"",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "lucide-react": "^0.554.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.258",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^7.2.4",
    "vite-plugin-static-copy": "^3.1.4"
  }
}
